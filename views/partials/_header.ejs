<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
  
    <div>
      <!-- If the username field is empty show the input line and login button  -->
      <% if(!user){ %>
        <div class="form-inline" style ="text-align: right;">
          <td>
            <form method="GET" action="/register" style ="margin: 3px;">
            <button type="submit" class="btn btn-outline-dark">Register</button>
          </form>
          </td>
          <td>
            <form method="GET" action="/login" style ="margin: 3px;">
            <button type="submit" class="btn btn-outline-dark">Login</button>
          </form>
          </td>
        </div>
        <% } else{ %>
          <!-- If the usern is logged in  show the username and logout button  -->
          <form class="form-inline" action="/logout" method="POST">
            <div class="form-group mb-2">
              <span style="margin: 1em"><b>Logged in As: <%= user.email %></b></span>
              <button type="submit" class="btn btn-outline-dark">Logout</button>
            </div>
          </form>
          <% } %>
    </div>
  </nav>
</header>